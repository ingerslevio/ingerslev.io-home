---
import { readFileSync } from "fs";
import { join } from "path";
import { marked } from "marked";
import mdx from "@astrojs/mdx";

const raceContents = Object.fromEntries(
  Object.entries(
    import.meta.glob("../content/races-content/*.{mdx,md}", {
      eager: true,
    })
  ).map(([key, value]) => [
    key
      .replace(/^\.\.\/content\/races-content\//i, "")
      .replace(/\.(mdx|md)$/i, ""),
    value,
  ])
);

export interface Props {
  raceId: string;
  language: "en" | "da";
}

const { raceId, language } = Astro.props;

const raceContent: any = raceContents[`${raceId}.${language}`];
const Content = raceContent?.Content;
---

{
  raceContent && (
    <div class="race-content" data-language={language}>
      <Content />
    </div>
  )
}

{
  !raceContent && (
    <div class="race-content-empty">
      <p>
        No content available for this race in{" "}
        {language === "en" ? "English" : "Danish"}.
      </p>
    </div>
  )
}

<style>
  .race-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem;
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    line-height: 1.7;
    color: #000000;
    font-size: 1.1rem;
  }

  .race-content h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #000000;
    margin: 0 0 1.5rem 0;
    border-left: 4px solid #666666;
    padding-left: 1rem;
  }

  .race-content h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #000000;
    margin: 2rem 0 1rem 0;
  }

  .race-content h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #000000;
    margin: 1.5rem 0 0.75rem 0;
  }

  .race-content p {
    margin: 0 0 1.25rem 0;
    color: #000000;
    font-size: 1.1rem;
  }

  .race-content ul,
  .race-content ol {
    margin: 0 0 1.25rem 0;
    padding-left: 1.5rem;
  }

  .race-content li {
    margin: 0.5rem 0;
    color: #000000;
    font-size: 1.1rem;
  }

  .race-content strong {
    color: #000000;
    font-weight: 600;
  }

  .race-content em {
    color: #000000;
    font-style: italic;
  }

  .race-content blockquote {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    border-left: 4px solid #666666;
    color: #000000;
    font-style: italic;
  }

  .race-content a {
    color: #0066cc;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .race-content a:hover {
    color: #004499;
    text-decoration: underline;
  }

  .race-content hr {
    border: none;
    border-top: 2px solid #666666;
    margin: 2.5rem 0;
  }

  .race-content-empty {
    text-align: center;
    padding: 2rem;
    color: #666666;
    font-style: italic;
    background-color: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    max-width: 800px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .race-content {
      margin: 0 1rem;
      padding: 2rem;
      font-size: 1rem;
    }

    .race-content h1 {
      font-size: 2rem;
    }

    .race-content h2 {
      font-size: 1.5rem;
    }

    .race-content h3 {
      font-size: 1.25rem;
    }
  }
</style>
