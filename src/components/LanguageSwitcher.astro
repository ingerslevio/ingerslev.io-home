---
import type { Language } from "../types/race";

// Detect current locale from URL
const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith("/en/");
const currentLanguage: Language = isEnglish ? "en" : "da";
---

<div class="language-switcher">
  <button
    class={`lang-button ${currentLanguage === "en" ? "active" : ""}`}
    data-lang="en"
  >
    EN
  </button>
  <button
    class={`lang-button ${currentLanguage === "da" ? "active" : ""}`}
    data-lang="da"
  >
    DA
  </button>
</div>

<style>
  .language-switcher {
    display: flex;
    gap: 0.25rem;
    background-color: #2a2a2a;
    padding: 0.25rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .lang-button {
    padding: 0.5rem 1rem;
    border: none;
    background: transparent;
    color: #a0a0a0;
    font-weight: 600;
    font-size: 0.875rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .lang-button:hover {
    background-color: #333333;
    color: #cccccc;
  }

  .lang-button.active {
    background-color: #1a1a1a;
    color: #ffffff;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.3);
  }
</style>
